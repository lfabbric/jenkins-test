pipeline {
    agent any 
    node {
        stage('Example') {
            if (env.BRANCH_NAME == 'master') {
                echo 'I only execute on the master branch'
            } else {
                echo 'I execute elsewhere'
            }
        }
    }
    stages {
        stage('Stage 1') {
            steps {
                echo 'Hello world!' 
            }
        }
        stage('Meh Another stage') {
            steps {
                echo 'Another step'
            }
        }
        stage('Maven step') {
            // agent { docker 'maven:3.8.1-adoptopenjdk-11' }
            steps {
                echo 'Hello Maven'
                // sh 'mvn --version'
            }
        }
        stage("One"){
            steps {
                sleep 10
                echo 'hello'
            }
        }
        
    }
}
